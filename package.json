{
  "name": "ombrage-bun-api-monorepo",
  "author": {
    "name": "Nicolas Boyer"
  },
  "repository": {
    "url": "https://github.com/boyer-nicolas/ombrage-bun-api"
  },
  "main": "dist/index.js",
  "module": "src/index.ts",
  "devDependencies": {
    "@biomejs/biome": "2.3.2",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@types/bun": "^1.3.1",
    "@types/pino": "^7.0.5",
    "changelogen": "^0.6.2",
    "dts-bundle-generator": "^9.5.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "openapi-types": "^12.1.3",
    "tsc-alias": "^1.8.16",
    "vitepress": "^2.0.0-alpha.12",
    "zod": "^4.1.12"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "license": "MIT",
  "workspaces": [
    "packages/*",
    "packages/examples/*"
  ],
  "packageManager": "bun@1.3.1",
  "scripts": {
    "build": "bun run --filter ombrage-bun-api build",
    "lint:fix": "biome check --write .",
    "lint": "biome check",
    "check:ci": "act --workflows .github/workflows/ci.yaml --pull=false",
    "prepare": "husky",
    "check": "tsc --project tsconfig.json",
    "test": "bun run --workspaces test",
    "generate:config": "bun run ./scripts/generate-config.ts",
    "publish:local": "bun run ./scripts/publish.ts",
    "publish": "changelogen --release --bump && bun publish --tag latest --ignore-scripts && git push && git push --tags",
    "docs:dev": "vitepress dev",
    "docs:build": "vitepress build",
    "docs:preview": "vitepress preview"
  },
  "type": "module",
  "types": "dist/index.d.ts",
  "version": "0.0.6"
}
