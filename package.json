{
  "name": "ombrage-bun-api",
  "version": "0.0.20",
  "author": {
    "name": "Nicolas Boyer"
  },
  "repository": {
    "url": "https://github.com/boyer-nicolas/ombrage-bun-api"
  },
  "main": "dist/index.js",
  "module": "src/index.ts",
  "devDependencies": {
    "@biomejs/biome": "2.3.2",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@types/bun": "^1.3.1",
    "@types/pino": "^7.0.5",
    "changelogen": "^0.6.2",
    "dts-bundle-generator": "^9.5.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "openapi-types": "^12.1.3",
    "tsc-alias": "^1.8.16",
    "zod": "^4.1.12"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "license": "MIT",
  "packageManager": "bun@1.3.1",
  "scripts": {
    "dev": "bun run --hot dev/index.ts",
    "lint:fix": "biome check --write .",
    "lint": "biome check",
    "prepare": "husky",
    "check": "tsc --noEmit",
    "test": "bun test",
    "test:coverage": "bun run ./scripts/test-with-coverage.ts",
    "coverage:badge": "bun run ./scripts/generate-coverage-badge.ts",
    "coverage:report": "bun run ./scripts/generate-coverage-report.ts",
    "generate:config": "bun run ./scripts/generate-config.ts",
    "build:js": "bun run ./build.ts",
    "build:types": "dts-bundle-generator -o dist/index.d.ts --no-check --external-inlines --inline-declare-externals src/index.ts",
    "build:clean": "rm -rf dist",
    "build": "bun run build:clean && bun run build:types && bun run build:js",
    "publish:local": "bun run ./scripts/publish.ts",
    "publish": "changelogen --release --bump && bun publish --tag latest --ignore-scripts && git push && git push --tags"
  },
  "type": "module",
  "types": "dist/index.d.ts"
}
