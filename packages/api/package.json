{
  "name": "koritsu",
  "version": "0.1.15",
  "keywords": [
    "koritsu",
    "openapi",
    "api",
    "client",
    "server",
    "typescript",
    "bun"
  ],
  "author": {
    "name": "Nicolas Boyer"
  },
  "repository": {
    "url": "https://github.com/boyer-nicolas/koritsu"
  },
  "homepage": "https://boyer-nicolas.github.io/koritsu/",
  "main": "dist/index.js",
  "module": "src/index.ts",
  "devDependencies": {
    "@types/bun": "^1.3.2",
    "changelogen": "^0.6.2",
    "dts-bundle-generator": "^9.5.1",
    "openapi-types": "^12.1.3",
    "tsc-alias": "^1.8.16",
    "zod": "^4.1.12"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "bun run --hot dev/index.ts",
    "lint:fix": "biome check --write .",
    "lint": "biome check",
    "check": "tsc --noEmit",
    "test": "bun test",
    "test:coverage": "bun test && bun run ./scripts/handle-coverage.ts",
    "coverage:badge": "bun run ./scripts/generate-coverage-badge.ts",
    "coverage:report": "bun run ./scripts/generate-coverage-report.ts",
    "build:js": "bun run ./build.ts",
    "build:types": "dts-bundle-generator -o dist/index.d.ts --no-check --external-inlines --inline-declare-externals --verbose --no-banner --export-referenced-types false src/index.ts",
    "build:clean": "rm -rf dist",
    "build": "bun run build:clean && bun run build:types && bun run build:js",
    "docs:dev": "vitepress dev",
    "docs:build": "vitepress build",
    "docs:preview": "vitepress preview",
    "prepublish": "cp ../../README.md ./README.md && bun run build",
    "release": "changelogen --release --bump --output ../../CHANGELOG.md || exit 1"
  },
  "type": "module",
  "types": "dist/index.d.ts"
}
